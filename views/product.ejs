<!-- Konten Kanan -->
<div class="flex-1 p-4">
  <!-- Header -->
  <div class="w-full bg-white p-5 rounded-xl flex justify-between items-center">
    <div class="text-xl font-medium">Product</div>

    <div class="flex items-center gap-5">
      <!-- Search -->
      <div
        class="flex items-center bg-gray-200 px-4 w-60 py-2.5 rounded-2xl gap-2"
      >
        <ion-icon name="search-outline" class="text-gray-500"></ion-icon>
        <input
        id="searchInput"
          type="text"
          placeholder="Search Product"
          class="bg-transparent outline-none text-sm"
        />
      </div>

      <!-- Add Button -->
      <button
        id="modalBtn"
        class="py-2 px-4 font-medium rounded-xl orangecss cursor-pointer"
      >
        + Add Product
      </button>

      <!-- Filter -->
      <div
        class="flex items-center justify-center w-10 h-10 bg-gray-200 rounded-xl cursor-pointer hover:bg-gray-300 transition"
      >
        <ion-icon
          name="filter-outline"
          class="w-6 h-6 text-gray-700"
        ></ion-icon>
      </div>
    </div>
  </div>
  <div class="overflow-x-auto pt-12">
    <table id="productTable" class="min-w-full bg-white rounded-xl shadow-md">
      <thead class="bg-gray-200 sticky top-0">
        <tr>
          <th class="text-left py-3 px-4 font-semibold text-sm rounded-tl-xl">
            No
          </th>
          <th class="text-left py-3 px-4 font-semibold text-sm">Product</th>
          <th class="text-left py-3 px-4 font-semibold text-sm">Price</th>
          <th class="py-3 px-4 font-semibold text-sm text-center">Stock</th>
          <th class="text-center py-3 px-4 font-semibold text-sm rounded-tr-xl">
            Action
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4 text-sm">1</td>
          <td class="py-2 px-4 text-sm">Apple MacBook Pro</td>
          <td class="py-2 px-4 text-sm">$2500</td>
          <td class="py-2 px-4 text-sm text-center">12</td>
          <td class="py-2 px-4 text-center flex justify-center gap-2">
            <button class="text-blue-500 hover:text-blue-700">
              <ion-icon name="create-outline" class="text-lg"></ion-icon>
            </button>
            <button class="text-red-500 hover:text-red-700">
              <ion-icon name="trash-outline" class="text-lg"></ion-icon>
            </button>
          </td>
        </tr>
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4 text-sm">2</td>
          <td class="py-2 px-4 text-sm">Samsung Galaxy S23</td>
          <td class="py-2 px-4 text-sm">$999</td>
          <td class="py-2 px-4 text-sm text-center">30</td>
          <td class="py-2 px-4 text-center flex justify-center gap-2">
            <button class="text-blue-500 hover:text-blue-700">
              <ion-icon name="create-outline" class="text-lg"></ion-icon>
            </button>
            <button class="text-red-500 hover:text-red-700">
              <ion-icon name="trash-outline" class="text-lg"></ion-icon>
            </button>
          </td>
        </tr>
        <tr class="hover:bg-gray-50">
          <td class="py-2 px-4 text-sm">3</td>
          <td class="py-2 px-4 text-sm">Sony WH-1000XM5</td>
          <td class="py-2 px-4 text-sm">$399</td>
          <td class="py-2 px-4 text-sm text-center">20</td>
          <td class="py-2 px-4 text-center flex justify-center gap-2">
            <button class="text-blue-500 hover:text-blue-700">
              <ion-icon name="create-outline" class="text-lg"></ion-icon>
            </button>
            <button class="text-red-500 hover:text-red-700">
              <ion-icon name="trash-outline" class="text-lg"></ion-icon>
            </button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
