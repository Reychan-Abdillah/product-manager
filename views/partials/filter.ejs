<div
  id="filterMenu"
  class="absolute hidden right-6 top-16 md:right-10 md:top-20 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-10"
>
  <div class="py-2">
    <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase">
      Urutkan Berdasarkan
    </div>

    <button
      onclick="filterStock('highest')"
      class="w-full text-left px-4 py-2 hover:bg-gray-100 transition flex items-center gap-2"
    >
      <ion-icon name="arrow-up-outline" class="text-gray-600"></ion-icon>
      <span class="text-sm text-gray-700">Stok Terbanyak</span>
    </button>

    <button
      onclick="filterStock('lowest')"
      class="w-full text-left px-4 py-2 hover:bg-gray-100 transition flex items-center gap-2"
    >
      <ion-icon name="arrow-down-outline" class="text-gray-600"></ion-icon>
      <span class="text-sm text-gray-700">Stok Tersedikit</span>
    </button>
    <button
      onclick="filterStock('date')"
      class="w-full text-left px-4 py-2 hover:bg-gray-100 transition flex items-center gap-2"
    >
      <ion-icon name="calendar-outline" class="text-gray-600"></ion-icon>
      <span class="text-sm text-gray-700">Tanggal</span>
    </button>

    <div class="border-t border-gray-200 my-1"></div>

    <button
      onclick="filterStock('reset')"
      class="w-full text-left px-4 py-2 hover:bg-gray-100 transition flex items-center gap-2"
    >
      <ion-icon name="refresh-outline" class="text-gray-600"></ion-icon>
      <span class="text-sm text-gray-700">Reset Filter</span>
    </button>
  </div>
</div>
